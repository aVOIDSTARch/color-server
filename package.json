{
  "name": "color-server",
  "version": "1.0.0",
  "description": "Javascript app to serve color codes and descriptions to other applicaitons and build theme files",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "convert": "npx sucrase-node convert-coolors-palettes.ts",
    "convert:coolors": "npx sucrase-node -e \"require('./convert-coolors-palettes').convertPalettes(require('./convert-coolors-palettes').COOLORS_SCHEMAS_CONFIG, 'Coolors Schemas')\"",
    "convert:server": "npx sucrase-node -e \"require('./convert-coolors-palettes').convertPalettes(require('./convert-coolors-palettes').COLOR_SERVER_DATA_CONFIG, 'Color Server Data')\"",
    "pipeline": "npx sucrase-node coolors-pipeline.ts",
    "pipeline:watch": "npx sucrase-node coolors-pipeline.ts --watch",
    "pipeline:all": "npx sucrase-node coolors-pipeline.ts --all",
    "pipeline:file": "npx sucrase-node coolors-pipeline.ts --file",
    "serve": "npx sucrase-node palette-server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aVOIDSTARch/color-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/aVOIDSTARch/color-server/issues"
  },
  "homepage": "https://github.com/aVOIDSTARch/color-server#readme",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "sucrase": "^3.35.1",
    "typescript": "^5.9.3"
  }
}
